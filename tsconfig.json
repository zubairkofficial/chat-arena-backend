{
  "compilerOptions": {
    "target": "es6", // Set the target version
    "module": "commonjs", // Module system to use
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of input files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable compatibility for ES Modules
    "skipLibCheck": true, // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true // Disallow inconsistencies in casing
  },
  "include": ["src/**/*.ts"], // Include all .ts files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude these folders from compilation
}
